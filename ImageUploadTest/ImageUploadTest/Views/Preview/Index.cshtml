<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border border-dark rounded p-4">
            <h1 class="text-center p-4 text-info">Preview Image</h1>
            <form method="post">
                <div class="row mb-5">
                    <div class="col-8">
                        <div class="form-group">
                            <label>Upload Image :</label>
                            <input type="file" id="chooseImg" class="form-control" accept="Image/*" />
                        </div>
                    </div>
                    <div class="col-4">
                        <img src="https://placehold.jp/100x100.png" id="imgPreview" style="width:100px; height:100px;border:1px solid red; border-radius:10px; padding:10px;" alt="Your Image" />
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-sm btn-primary float-right" />
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{ 
    <script src="~/js/Preview.js"></script>
}