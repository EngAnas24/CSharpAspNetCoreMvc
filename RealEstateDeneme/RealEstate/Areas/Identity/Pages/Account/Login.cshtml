@page
@model LoginModel

<div class="wrapper">
    <div class="form-box signin">
        <h2>Sign In</h2>
        <form action="#">

            <div class="input-box">
                <span class="ico"><i class="fa-solid fa-envelope"></i></span>
                <input type="email" required />
                <label for="">Email</label>
            </div>
            <div class="input-box">
                <span class="ico"><i class="fa-solid fa-lock"></i></span>
                <input type="password" required />
                <label for="">Password</label>
            </div>
            <div class="remember-forgot">
                <label><input type="checkbox" checked /> Remember me</label>
                <a href="#">Forgot Password?</a>
            </div>
            <a href="index.html">
                <button type="submit" class="btnn">Sign in</button>
            </a>
            <div class="signin-signup">
                <p>
                    Don't have an account?<a href="#" class="signup-link"> Sign up</a>
                </p>
            </div>
        </form>
        <div class="media-options">
            <a href="#"
               target="https://mail.google.com/mail/u/0/?tab=rm&ogbl#inbox">
                <i class="fa-brands fa-google"></i>
                <span>sign in with Google</span>
            </a>
            <a href="#" target="_blank">
                <i class="fa-brands fa-facebook"></i>
                <span>Sign in with Facebook</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
