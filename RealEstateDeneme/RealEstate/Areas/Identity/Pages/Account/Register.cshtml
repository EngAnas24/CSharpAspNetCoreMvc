@page
@model RegisterModel

<div class="wrapper">
<div class="form-box signin">
    <h2>Sign up</h2>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="input-box">
            <span class="ico"> <i class="fa-solid fa-user"></i></span>
            <input type="text" required />
            <label for="">Username</label>
        </div>
        <div class="input-box">
            <span class="ico"><i class="fa-solid fa-envelope"></i></span>
            <input type="email" required />
            <label for="">Email</label>
        </div>
        <div class="input-box">
            <span class="ico"><i class="fa-solid fa-lock"></i></span>
            <input type="password" required />
            <label for="">Password</label>
        </div>
        <div class="remember-forgot">
            <label><input type="checkbox" /> agree to the terms & conditions</label>
        </div>
        <button type="submit" class="btnn">Sign up</button>
        <div class="signin-signup">
            <p>
                    Already have an account?<a href="#" class="signin-link">
                    Sign in
                </a>
            </p>
        </div>
    </form>
    <div class="media-options">
        <a href="#">
            <i class="fa-brands fa-google"></i>
            <span>Sign ip with Google</span>
        </a>
        <a href="#">
            <i class="fa-brands fa-facebook"></i>
            <span>Sign in with Facebook</span>
        </a>
    </div>
</div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
